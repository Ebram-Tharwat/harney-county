@model HarneyCounty.Web.ViewModel.HomePageViewModel

@{
    var filterViewModel = ViewBag.FilterViewModel as SearchCriteria;
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SearchCriteria.AccountNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SearchCriteria.MobileHomeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SearchCriteria.XNmbr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SearchCriteria.OwnerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data[0].MapId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data[0].MobileHomeRollType)
        </th>
        <th></th>
    </tr>

    @if (Model != null && Model.Data != null && Model.Data.Any())
    {
        foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobileHomeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.XNmbr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OwnerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MapId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobileHomeRollType)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.AccountNumber })
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="7">
                <h4>
                    <span class="label label-info">No data match the search criteria!</span>
                </h4>
            </td>
        </tr>
    }
</table>
