@model HarneyCounty.Domain.Core.Models.AuditTurnoverSequence

@{
    ViewBag.Title = "CreateAuditTurnOverSequence";
}

<h2>Create Audit TurnOver Sequence</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    <div class="form-horizontal">
        <h4>Audit Turnover Sequence</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TurnOverDateFrom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TurnOverDateFrom, new { htmlAttributes = new { @class = "form-control date-picker" } })
                @Html.ValidationMessageFor(model => model.TurnOverDateFrom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TurnOverDateTo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TurnOverDateTo, new { htmlAttributes = new { @class = "form-control date-picker" } })
                @Html.ValidationMessageFor(model => model.TurnOverDateTo, "", new { @class = "text-danger" })
            </div>
        </div>
        @{ if (ViewBag.FiscalYearId != null)
                {
                <div class="form-group">
                    @Html.LabelFor(model => model.AuditFiscalYearId, htmlAttributes: new { @class = "control-label col-md-2" })

                    <div class="col-md-10">
                        @Html.Label((string)ViewBag.FiscalYearId.ToString(), htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            }
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
            }

<div>
    @Html.ActionLink("Back to List", "Index", new { id = ViewBag.FiscalYearId })
</div>
<!-- Code to wire up your DatePicker -->
<script type="text/javascript">
    $(function () {
        // This will make every element with the class "date-picker" into a DatePicker element
        $('.date-picker').datepicker();
    })
</script>